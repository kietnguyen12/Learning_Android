<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    tools:context=".MainActivity">

    <TextView
        android:text="Name"
        android:id="@+id/textviewTitle"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/discs"
        android:layout_above="@+id/txtTimeSong"
        android:layout_centerHorizontal="true"
        android:background="@null"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgButtonPrevious"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:src="@drawable/previous" />

    <ImageView
        android:layout_width="50dp"
        android:id="@+id/imgButtonPlay"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="124dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@drawable/play" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgButtonNext"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="47dp"
        android:background="@null"
        android:src="@drawable/next" />

    <SeekBar
        android:id="@+id/seekbarProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:layout_above="@+id/imgButtonPrevious"/>

    <TextView
        android:id="@+id/txtTimeSong"
        android:text="00:00"
        android:layout_above="@id/seekbarProgress"
        android:layout_marginLeft="10dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txtTimeTotal"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbarProgress"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:text="00:00"
        android:textColor="#fff" />

</RelativeLayout>