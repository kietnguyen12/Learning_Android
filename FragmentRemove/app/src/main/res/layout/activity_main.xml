<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:onClick="AddA"
        android:id="@+id/addA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Add A" />

    <Button
        android:onClick="AddB"
        android:id="@+id/addB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/addA"
        android:text="ADD B" />

    <Button
        android:onClick="AddC"
        android:id="@+id/addC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/addB"
        android:text="ADD C" />

    <Button
        android:onClick="Back"
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Back" />

    <Button
        android:onClick="RemoveA"
        android:id="@+id/removeA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addA"
        android:layout_alignParentStart="true"
        android:text="remove A" />

    <Button
        android:onClick="RemoveB"
        android:id="@+id/removeB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addA"
        android:layout_toEndOf="@+id/addA"
        android:text="remove B" />

    <Button
        android:onClick="RemoveC"
        android:id="@+id/removeC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addA"
        android:layout_toEndOf="@+id/addB"
        android:text="remove C" />

    <Button
        android:onClick="PopA"
        android:id="@+id/popA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addA"
        android:layout_alignParentEnd="true"
        android:text="POP A" />
    
    <FrameLayout
        android:id="@+id/frameContent"
        android:layout_below="@id/popA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</RelativeLayout>